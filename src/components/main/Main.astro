---
import LinkBtn from "../commons/LinkBtn/LinkBtn.astro";
import ListBoxItem from "../commons/Listbox/ListBoxItem.astro";
import ListBoxWrapper from "../commons/Listbox/ListBoxWrapper.astro";
---

<main class="linktree__main">
  <ListBoxWrapper class="linktree__main__listbox">
    <ListBoxItem class="linktree__main__listbox__item">
      <LinkBtn href="#" class="linktree__main__listbox__item__link">FaceBook</LinkBtn>
    </ListBoxItem>
    <ListBoxItem class="linktree__main__listbox__item">
      <LinkBtn href="#" class="linktree__main__listbox__item__link">Twitter</LinkBtn>
    </ListBoxItem>
    <ListBoxItem class="linktree__main__listbox__item">
      <LinkBtn href="#" class="linktree__main__listbox__item__link">Instagram</LinkBtn>
    </ListBoxItem>
  </ListBoxWrapper>
</main>

<style lang="scss">
  .linktree {
    &__main {
      border: 1px solid blue;
      display: flex;
      flex-direction: column;
      align-items: center;
      padding: 1rem;
      &__listbox{
        list-style-type: none;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 0.5rem;
        width: 100%;
        &__item{
            border: 1px solid chocolate;
            width: 100%;
            text-align: center;
            &__link{
                text-decoration: none;
                color: black;
            }
        }

      }
    }
  }
</style>
